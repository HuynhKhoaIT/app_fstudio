<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#EFECEC"
    tools:context=".Activity.DetailProductActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:cardBackgroundColor="#EFECEC"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="20dp">

                    <com.denzcoskun.imageslider.ImageSlider
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageSlideProduct"
                        app:iss_corner_radius="20"
                        app:iss_title_background="@drawable/gradient"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="horizontal"-->
<!--                android:gravity="center">-->
<!--                <ImageView-->
<!--                    android:id="@+id/img_product"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="200dp"-->
<!--                    android:src="@drawable/iphone"/>-->
<!--            </LinearLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/name_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên sản phẩm"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/price_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="130000 vnd"
                    android:layout_marginTop="5dp"
                    android:textColor="#FF0000"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_minus"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="-"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="30sp"/>
                <Button
                    android:id="@+id/btn_plus"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="+"
                    android:textSize="30sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/add_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADD TO CART"
                    android:background="@drawable/border_radius_50"
                    android:layout_marginEnd="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginStart="50dp"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chi tiết sản phẩm"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="#AFAFAF"/>
                <TextView
                    android:id="@+id/des_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="mô tả chi tiết sản phẩm"
                    android:justificationMode="inter_word"
                    android:textColor="#B9000000"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đánh giá sản phẩm"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>
                    <RatingBar
                        android:id="@+id/productVoteALl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:progressTint="#FFEB3B"
                        android:rating="5"
                        android:scaleX="0.3"
                        android:scaleY="0.3"
                        android:stepSize="1"
                        android:layout_marginTop="-15dp"
                        android:layout_marginLeft="-86dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginTop="-20dp"
                    android:background="#AFAFAF"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EFECEC"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
